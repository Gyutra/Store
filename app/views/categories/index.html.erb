<strong>All Categories</strong>

<table>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th></th>
  </tr>

  <% @category.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= image_tag(category.image.url(:small)) %></td>
      <td> <hr> </td>
      <td><%= link_to 'Show', category_path(category) %></td>
      <td><%= link_to 'Edit', edit_category_path(category)%></td>
      <td><%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: 'TO4HO?'} %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Category', new_category_path %>